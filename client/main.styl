@import 'jeet'

// Vars
color-blue = #07A2EA

// Mixins
button-dark()
  background-color #191919
  color #898989
  transition .3s
  cursor pointer
  &:hover
    background-color #010101
    color #ababab

focus-blue()
  &:focus
    border 1px solid #07A2EA
    box-shadow 0px 0px 3px #7fdbff

global-reset()

img
  max-width 100%

html,body
  height 100%

body
  bodyBackground = #dedede
  ////
  background-color bodyBackground
  font-family sans-serif
  //173945
  background linear-gradient(to bottom, #000, rgba(0,0,0,0.1)), url('/images/default/bg1.jpg')
  background-size cover
  background-repeat no-repeat
  background-attachment fixed
  overflow-y auto
  background-position top

#mainHeader
  headerHeight = 40px
  headerBackground = #262928
  ////
  width 100%
  background-color headerBackground
  background linear-gradient(to right, rgba(38,41,40,1) 20%,rgba(0,0,0,1) 100%)

  .max
    max-width 1200px
    width 90%
    margin 0 auto
  logo
    display inline-block
    height headerHeight
    vertical-align middle
    img
      height headerHeight
      padding 0 10px
  nav
    display inline-block
    ul
      li
        line-height headerHeight
        a
          text-decoration none
          letter-spacing 1px
          color #bebebe
          text-shadow 0px 1px 1px rgba(255,255,255,0.1)
          font-size 12px
          display inline-block
          padding 0 20px
          transition .3s
          font-weight 100
          text-transform uppercase
          position relative
          &:hover
            background-color #232323
  #searchbar
    float right
    height headerHeight
    vertical-align middle
    line-height headerHeight
    input
      border-radius 2px
      padding 5px
      outline none
      transition .3s
      border 1px solid #dedede
      box-shadow 0px 1px 1px rgba(0,0,0,0.0)
      background-color #dedede
      color #454545
      border-bottom-right-radius 0px
      border-top-right-radius 0px
      border-right none !important
      focus-blue()
      &:hover
        border 1px solid color-blue

    button
      height 25px
      border 1px solid #262928
      border-left none
      outline none
      box-shadow none
      padding 0px
      vertical-align middle
      padding 0 5px
      border-top-right-radius 2px
      border-bottom-right-radius 2px
      border-left none !important
      button-dark()
      background-color #262928
      focus-blue()

.view
  width 90%
  max-width 1200px
  margin 0 auto
  padding 30px
  h1
    color #bebebe
    font-size 48px
    text-transform uppercase
    font-weight 800
    border-bottom 1px solid
    text-shadow 0px 1px 2px rgba(0,0,0,0.3)
    margin-bottom 20px
    padding-bottom 10px

#shopSidebar
  width 25%
  float left
  text-align right
  h1
    padding-right 20px
    border-bottom 1px solid transparent
  .category
    padding-right 20px
    h3
      color #bebebe
      font-size 30px
      font-weight 400
      padding-bottom 5px
      margin-bottom 0px
    ul
      margin-bottom 20px
      li
        font-size 18px
        color #bebebe
        margin-bottom 8px
        font-weight 100

#shopSidebar + #shopMain
  width 75%
  float left

#shopMain
  width 100%

#filter
  background-color #262928
  padding 0 20px
  margin-bottom 20px
  color #bebebe
  height 40px
  line-height 40px
  font-weight 200
  border-radius 2px
  display none
  p
    display inline-block
    vertical-align middle
    font-size 12px
    .term
      color #dedede
      font-weight 700
      font-size 13px
      display inline-block
      vertical-align middle
      padding-left 5px
      line-height 40px
  button
    background-color #191919
    border none
    outline none
    display inline-block
    vertical-align middle
    margin-left 10px
    color #898989
    border-radius 3px
    transition .3s
    cursor pointer
    height 24px
    width 24px
    &:hover
      background-color #010101
      color #ababab

#productlist
  overflow hidden
  .product
    column(1/4)
    display inline-block
    vertical-align top
    color #bebebe
    font-size 14px
    padding-bottom 10px
    opacity 0
    img
      padding-bottom 20px